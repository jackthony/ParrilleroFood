<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewCategoria"
        android:layout_width="14dp"
        android:layout_height="110dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_parrillero" />

        <TextView
            android:id="@+id/textViewCategoria"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:text="TextView"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/primary_rojo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewCategoria"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/textViewCategoriaProceso"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_marginStart="15dp"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:drawableLeft="@drawable/ic_proceso"
            android:drawablePadding="2dp"
            app:layout_constraintStart_toEndOf="@+id/imageViewCategoria"
            app:layout_constraintTop_toBottomOf="@+id/textViewCategoria" />

</androidx.constraintlayout.widget.ConstraintLayout>